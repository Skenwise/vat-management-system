{
  "name": "vat-electron",
  "version": "1.0.0",
  "description": "Electron app for Choma Retail VAT Program",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build":{
    "appId": "com.choma.vat",
    "electronVersion": "28.2.0",
    "npmRebuild": false,
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "frontend/vat-dashboard/build/**/*",
      "main.js",
      "backend/**/*.py",
      "logic.py",
      "database.py"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "axios": "^1.13.2"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12"
  }
}
